<div id="private_area_login_box" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Authentification zone priv√©e</h4>
      </div>
      <div class="modal-body">
        <div class="label label-warning" data-bind="text: errMsg"></div>
        <form method="post" data-endpoint="{{ path_for('private_login') }}">
          <div class="form-group">
            <label for="login">Utilisateur</label>
            <input data-bind="value: user" type="text" class="form-control" placeholder="utilisateur">
          </div>
          <div class="form-group">
            <label for="password">Mot de passe</label>
            <input data-bind="value: password" type="password" class="form-control">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button
          data-uri-target="{{ path_for('private_admin') }}"
          type="button"
          class="btn btn-primary"
          data-bind="click: onValidateClick">
            Valider
          </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>
