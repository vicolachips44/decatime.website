<div id="article_item" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 id="article_item_title" class="modal-title">Ajouter un titre</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="article_item_value">Titre</label>
          <input name="article_item_value" id="article_item_value" type="text" class="form-control" placeholder="Entrez un titre">
        </div>
      </div>
      <div class="modal-footer">
        <button
          id="article_item_validate_button"
          type="button"
          class="btn btn-primary">
            Valider
          </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>
